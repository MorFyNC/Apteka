<Page x:Class="Apteka.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Apteka"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="200">
            <TextBlock Text="Авторизация" TextAlignment="Center" FontWeight="Bold" FontSize="16"></TextBlock>
            <StackPanel Margin="0 10 0 10">
                <TextBlock Text="Выберите пользователя" TextAlignment="Center" FontSize="14" Margin="0 0 0 5"></TextBlock>
                <ComboBox x:Name="EmployeeCB"></ComboBox>
            </StackPanel>
            <Button x:Name="Login" Style="{StaticResource DefaultBtn}" Content="Авторизоваться" Click="Login_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
